extend layout

block content
  .inner
    form.form(action="/account" method="POST")
      h2 #{title}
      label(for="name") Name
      input(type="text" name="name" value=user.name)
      label(for="email") Email
      input(type="email" name="email" value=user.email)
      input.button(type="submit" value="Update account")
