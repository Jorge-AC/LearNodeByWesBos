extends layout

block content
  .inner
    h2 #{title}
    table.table
      thead
        td Photo
        td Ranking
        td Name
        td Reviews
        td Average Ranking
      each store, i in stores
        tr
          td
            a(href=`/store/${store.slug}`)
              img(src=`/uploads/${store.photo || 'store.png'}` width="200" alt=store.name)
          td #{ i + 1 }
          td: a(href=`/store/${store.slug}`)= store.name
          td #{store.reviews.length}
          td #{ Math.round(store.averageRatings * 10) / 10} / 5

